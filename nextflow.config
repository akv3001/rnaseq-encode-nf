manifest {
  description = 'Example RNA-seq pipeline for ENCODE data on AWS Batch implemented with Nextflow' 
}

/* 
 * Basic execution resources 
 */
process {
    container = 'nextflow/rnaseq-nf'
    errorStrategy = 'retry' 
    maxRetries = 2 
    $index.cpus = 2 
    $fastqc.cpus = 2
    $quant.cpus = 4
    $index.memory = '7 GB'
    $quant.memory = '6 GB' 
    $fastqc.memory = '6 GB'
    $multiqc.memory = '1 GB'
}

/* 
 * environment specific configuration 
 */ 
 
profiles {

    awsbatch {
        aws.region = 'eu-west-1'
        aws.client.storageEncryption = 'AES256'
        workDir = 's3://rcuk-eu/work'
        process.queue = 'large'
        executor.name = 'awsbatch'
        executor.awscli = '/home/ec2-user/miniconda/bin/aws'
        executor.queueSize = 1000
        executor.pollInterval = '20 sec'
        process.errorStrategy = 'ignore'
    }
    
    'crg-cluster' {
        executor = 'crg'
        singularity.enabled = true
        process.container = "docker://nextflow/rnaseq-nf"
        process.queue = 'cn-el7'
        process.time = '90 min'
        process.$quant.time = '4.5 h'
        env._JAVA_OPTIONS='-Djava.io.tmpdir=$TMPDIR'
    }

} 


